local gShowLicenseInfo = terralib.global(bool, false)

local terra showLicenseInfo(opened : &bool)
  if not @opened then
    return
  end

  if not ImGui.Begin("License Info", opened, 0) then
    ImGui.End()
    return
  end

  if ImGui.CollapsingHeader("Selos", nil, true, false) then
    ImGui.BeginChild("Selos", ImGui.ImVec2{0,330}, false, 1 << 11) -- 1 << 11 is the bitflag to enable the horizontal scrollbar
    ImGui.TextUnformatted(SelosCopyright, nil)
    ImGui.EndChild()
  end

  [(function()
    local quoteList = terralib.newlist()
    for _, v in ipairs(externalCopywriteInfo) do
      quoteList:insert(quote
        ImGui.Text("")
        if ImGui.CollapsingHeader(v.name, nil, true, false) then
          ImGui.BeginChild(v.name, ImGui.ImVec2{0,330}, false, 1 << 11) -- 1 << 11 is the bitflag to enable the horizontal scrollbar
          ImGui.TextUnformatted(v.license, nil)
          ImGui.EndChild()
        end
      end)
    end
    return quoteList
  end)()]

  ImGui.End()
end

local terra addLicenseInfoButton()
  if ImGui.Button("License Info") then
    gShowLicenseInfo = not gShowLicenseInfo
  end
  showLicenseInfo(&gShowLicenseInfo)
  ImGui.Text("")
end


return addLicenseInfoButton
